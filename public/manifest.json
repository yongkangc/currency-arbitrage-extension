{
  "manifest_version": 3,
  "name": "Currency Arbitrage - Smart Savings",
  "version": "1.0.0",
  "description": "Save money on subscriptions by finding the best currency to pay in",
  "author": "Currency Arbitrage Extension",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Currency Arbitrage"
  },
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.netflix.com/*",
        "https://*.spotify.com/*",
        "https://*.adobe.com/*"
      ],
      "js": ["content/content-script.js"],
      "css": ["styles/widget.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "permissions": [
    "storage",
    "alarms"
  ],
  
  "host_permissions": [
    "https://*.netflix.com/*",
    "https://*.spotify.com/*",
    "https://*.adobe.com/*",
    "https://v6.exchangerate-api.com/*",
    "https://api.fixer.io/*"
  ],
  
  "optional_permissions": [
    "notifications"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "styles/widget.css",
        "assets/*"
      ],
      "matches": [
        "https://*.netflix.com/*",
        "https://*.spotify.com/*",
        "https://*.adobe.com/*"
      ]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'"
  },
  
  "minimum_chrome_version": "110"
}